<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:strokeWidth="0dp"
    app:strokeColor="@color/colorPrimary"
    app:cardElevation="2dp"
    android:layout_margin="4dp"
    android:background="#FFDE03">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDE03"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp">


        <ImageView
            android:id="@+id/doctors_photo_roundedimag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boyone"
            android:scaleType="fitCenter" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/doctors_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/myCardView"
        android:fontFamily="sans-serif-medium"
        android:text="Doctors Name"
        android:textColor="#040404"
        android:textSize="16sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/timings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctors_name_tv"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/myCardView"
        android:text="Timings"
        android:textColor="#453E3E"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/timings_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctors_name_tv"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/timings_title"
        android:text="08 AM To 10 AM\n03 PM To 08 PM"
        android:textColor="#0E0E0E"
        android:layout_marginTop="3dp"/>


</RelativeLayout>

</com.google.android.material.card.MaterialCardView>